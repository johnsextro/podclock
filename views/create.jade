doctype
html
  head
    title= title
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
    script(src="../javascripts/jquery-1.11.0.js")
    script(src='../javascripts/create-notes.js')
  body
    .navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle
          a.navbar-brand(href="#")= title
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active: a(href="/") Home
    .container-fluid
      .row-fluid
        .panel.panel-default
          .panel-body
            form.form-horizontal  
              div.form-group
                label.col-sm-1.control-label(for='showNumber') Episode
                div.col-sm-2
                  input.form-control#showNumber(type='text', placeholder='Episode #')
              div.form-group
                label.col-sm-1.control-label(for='episodeTitle') Show Title
                div.col-sm-2
                  input.form-control#episodeTitle(type='text', placeholder='Witty Title')    
        .panel.panel-default.col-md-6
          .panel-body
            input.form-control#segment-name(type='text', placeholder='Segment Name/Topic')
            textarea.form-control#segment-notes(rows="10", placeholder='Discuss notes')
            button.btn.btn-default#add-segment Add Segment
        .panel.panel-default.col-md-6
          .panel-body#segment-list