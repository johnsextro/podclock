.navbar.navbar-default
  .container-fluid
    .navbar-header
      button.navbar-toggle
      a.navbar-brand(href="#")= title
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li.active: a(href="/") Home
      

.container-fluid
  .row-fluid
    .row
      .panel.panel-default.col-md-3
        .panel-body
          button.btn-lg.btn-primary#start-link 
            span#clock-label Start/Pause/Resume
            h2#podclock 00:00:00
      .panel.panel-default.col-md-2
        .panel-body
          button.btn-lg.btn-danger.pull-right#reset-link Reset
    .row
      .panel.panel-default.col-md-6
        .panel-body
          .row
            h4 Current Segment - Title 
              small (00:30:00 to 00:40:00)
          .row
            div.input-group
              input.form-control#show-note(type='text', placeholder='Discussion Note')
              span.input-group-btn
                button.btn.btn-default#add-note Add Note
            textarea.form-control(rows='5')
      .panel.panel-default.col-md-6
        .panel-body
          .row
            h4 Next Segment - Title 
              small (00:40:00 to 00:60:00)
          .row
            textarea.form-control(rows='5')

  .row-fluid
    .panel.panel-default.col-md-4
      .panel-body
        div.input-group
          input.form-control#title-suggestion(type='text', placeholder='Suggestion')
          span.input-group-btn
            button.btn.btn-default#suggest-title Suggest Title
        h4 Possible Show Titles
        ol#show-titles
    
    .panel.panel-default.col-md-4.col-md-offset-4
      .panel-body
        div.input-group
          input.form-control#event-name(type='text', placeholder='Event Button Text')
          span.input-group-btn
            button.btn.btn-default#create-event Create Event Button
        h4 Events & Time Codes
        div.btn-group.btn-group-vertical.pull-right#event-buttons
          button.btn.btn-default.event_time_code_btn Um / Uh / And
          button.btn.btn-default.event_time_code_btn Silence
          button.btn.btn-default.event_time_code_btn Talk over
        div.pull-left
          ul.list-group#time-codes    