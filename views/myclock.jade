.navbar.navbar-default
  .container-fluid
    .navbar-header
      button.navbar-toggle
      a.navbar-brand(href="#")= title
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li.active: a(href="/") Home
      

.container-fluid
  .jumbotron
    h2 This Agile Life Podcast Clock
    button.btn-lg.btn-primary#start-link 
      span#clock-label Click to Start/Pause/Resume
      h1: span#podclock 00:00:00
    button.btn-lg.btn-danger.pull-right#reset-link Reset

.row-fluid
  .jumbotron.col-md-5
    div.input-group
      input.form-control#title-suggestion(type='text', placeholder='Suggestion')
      span.input-group-btn
        button.btn.btn-default#suggest-title Suggest Title
    h3 Possible Show Titles
    ol#show-titles
  
  .jumbotron.col-md-5.col-md-offset-2
    div.input-group
      input.form-control#event-name(type='text', placeholder='Event Button Text')
      span.input-group-btn
        button.btn.btn-default Create Event Button
    h3 Events & Time Codes
    div.btn-group.btn-group-vertical.pull-left
      button.btn.btn-default.event_time_code_btn Um / Uh / And
      button.btn.btn-default.event_time_code_btn Silence
      button.btn.btn-default.event_time_code_btn Talk over
    div.pull-right
      ul.list-group#time-codes    