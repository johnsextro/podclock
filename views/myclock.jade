  .navbar-inner
    .container
      a.brand(href="#")= title
      .nav-expand
        ul.nav
          li.active
            a(href="/") Home
.container
  .hero-unit
    h2 This Agile Life Podcast Clock
    h1
      button.btn-large.btn-danger#reset-link Reset
      span#podclock 00:00:00     
      button.btn-large.btn-primary#start-link Start
