doctype
html
  head
    title= title
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
  body
    .navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle
          a.navbar-brand(href="#")= title
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active: a(href="/") Home
            li: a(href="/myclock") This Agile Life
          ul.nav.navbar-nav.navbar-right
            li: a(href="#") Welcome, 
              span#displayName Username

    .container-fluid
      .panel.panel-default
        .panel-body
          h2 Episode #{show.showNumber}
          h3 #{show.notes}
